<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1020" prefHeight="680"
            fx:controller="vision.controllers.VisionEventController">
    <center>
        <VBox>
            <TableView fx:id="eventTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="Id" prefWidth="50" />
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="200" />
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250" />
                    <TableColumn fx:id="cardImageUrlColumn" text="Card Image URL" prefWidth="200" />
                    <TableColumn fx:id="redirectUrlColumn" text="Redirect URL" prefWidth="200" />
                </columns>
            </TableView>
            <HBox alignment="BOTTOM_RIGHT">
                <Button text="Add Event" onAction="#addEvent" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
